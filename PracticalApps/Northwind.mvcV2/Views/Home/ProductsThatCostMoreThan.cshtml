@using Northwind.Common.Models;
@model IEnumerable<Product>

@{
    string title = "Products that cost more than " + ViewData["MaxPrice"];
    ViewData["Title"] = title;
}

<h2>@title</h2>
@if (Model is null)
{
    <div>No products found.</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Supplier's Company Name</th>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>Units in stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product p in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(c=>p.Category.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(c=>p.Supplier.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(c=>p.ProductName)
                    </td>                    
                    <td>
                        @Html.DisplayFor(c=>p.UnitPrice)
                    </td>                    
                    <td>
                        @Html.DisplayFor(c=>p.UnitsInStock)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}